# Das Progamm
NAME 				:=	megaphone

# Compiler
CXX					:=	c++
CXXFLAGS			:=	-Wall -Werror -Wextra -std=c++98

DEPS				:=	${OBJS:.o=.d}

# Sources	
SRCS				:=	megaphone.cpp

# Objects
OBJS_PATH			:=	./objs
OBJS_NAMES			:=	$(SRCS_NAMES:.cpp=.o)
OBJS				:=	$(addprefix $(OBJS_PATH)/, $(OBJS_NAMES))

all	:	$(NAME)

$(OBJS_PATH)/%.o: $(SRCS_PATH)/%.cpp
	@mkdir -p $(OBJS_PATH)
	@$(CXX) $(CXXFLAGS) -MMD -MP -c $< -o $@

$(NAME)	: $(OBJS)
	@$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)
	@echo "ðŸ‘¾ ex00 - WOOP WOOP ðŸ‘¾"

clean	:
	@echo "Cleaning the mess (ï¿£ãƒ¼ï¿£)ã‚ž"
	@rm -rf $(OBJS_PATH)
	@rm -rf $(DEPS)

fclean	:	clean
	@echo "ðŸš€ Byyye minishit ðŸš€"
	@rm -rf $(NAME)

re:	fclean all

-include $(DEPS)

.PHONY:	all clean fclean re bonus